/* pages/common/common.wxss */
page{
  background-color: #f0f0f0;
  margin-bottom: 100rpx;
}
.van-info {
  border: none !important;
}
.chat{
  position: absolute;
  top: 36rpx;
  right: 50rpx;
}
.head-box{
  height: 120rpx;
  width: 100%;
  line-height: 120rpx;
  background-color: #1e2333;
  color: #76b704;
  text-align: center;
  font-size: 40rpx;
}
.box{
  height: 160rpx;
  width: 100%;
  display: flex;
  justify-content: space-around;
  background-color: #1e2333;
  align-items: center;
}
.box-content{
  width: 70rpx;
  text-align: center;
}
 .box .img{
  width: 100%;
  height: 70rpx;
  background-color: #76b704;
}
 .box .name{
  color: #f0f0f0;
  margin-top: 10rpx;
  font-size: 26rpx;
}
.grid-img{
  width: 100rpx;
  height: 100rpx;
  background-color: #76b704;
}
.grid-name{
  color: #868686;
  font-size: 30rpx;
  margin-top: 4rpx;
}
.transparent {
  opacity: 0; 
}

.page-container {
  position: relative;
  width: 100%;
  height: 100%;
}

.transparent-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(193 ,193, 193,1); 
  z-index: 1;
}
.content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 100%;
}

.overlay-head {
  width: 95%;
    text-align: center;
    background-color: #1e2333;
    margin: auto;
    height: 70rpx;
    color: #fff;
    line-height: 70rpx;
    border-radius: 10rpx 10rpx 0 0;
}
.overlay-content{
  width: 95%;
    background: #fff;
    height: 600rpx;
    margin: auto;
}

